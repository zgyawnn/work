                }
                if (comboBox2.Text.Trim() != "")
                {
                    sql += " And footweartype='" + footwear(comboBox2.Text.Trim()) + "'";

                }
                sql += "order by ID";

                SqlDataAdapter sda = new SqlDataAdapter(sql, connection);

                DataTable dt = new DataTable();
                sda.Fill(dt);
  
                if (dt.Rows.Count > 0)
                {
       
                    for (int j = 0; j < dt.Rows.Count; j++)
