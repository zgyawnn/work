                        dataGridView1.Rows[newIndex].Cells["id"].Value = dt.Rows[j][0].ToString ();
                        dataGridView1.Rows[newIndex].Cells["url"].Value = url;
                           
                  
 
                    }
 
                }
 
 
            }
          
            connection.Close();

        }

